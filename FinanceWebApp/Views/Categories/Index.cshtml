@model IEnumerable<FinanceWebApp.Models.Category>

@{
    ViewData["Title"] = "Categories";
}
<h2>Categories</h2>

<div class="container">
    <table class="table table-bordered">
        <thead class="table-light">
        <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Parent</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Type</td>
                <td>@(item.ParentCategory?.Name ?? "—")</td>
                <td>
                    <a class="btn btn-info" asp-action="Update" asp-route-id="@item.CategoryId">
                        <i class="bi">Edit</i>
                    </a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.CategoryId">
                        <i class="bi">Delete</i>
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
    <a asp-action="Create">Add Category</a>
</div>