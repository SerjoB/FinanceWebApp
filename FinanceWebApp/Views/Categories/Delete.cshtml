@model FinanceWebApp.Models.Category
<h2>Delete category @Model.Name?</h2>

@if (Model.Subcategories.Any())
{
    <p>This category has @Model.Subcategories.Count children. What do you want to do?</p>
    
    <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
        <input type="hidden" name="mode" value="orphan" />
        <button type="submit" class="btn btn-warning">
            Delete only this category
        </button>
    </form>

    <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
        <input type="hidden" name="mode" value="cascade" />
        <button type="submit" class="btn btn-danger">
            Delete category and subcategories
        </button>
    </form>
}
else
{
    <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
        <input type="hidden" name="mode" value="orphan" />
        <button type="submit" class="btn btn-danger">
            Delete category
        </button>
    </form>
}

